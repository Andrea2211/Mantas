##Script para hacer heatmaps de Gst vs D y boxplots de r estimados


setwd ("/Users/AndreaMontero/Desktop/Mantas/Plots")

Comb<- read.csv("/Users/AndreaMontero/Desktop/Mantas/Plots/comb.csv", header=TRUE, sep=";")
install.packages("ggplot2")
library(ggplot2)
install.packages("reshape")
library(reshape)


head(comb)

mat.heatmap.m = melt(comb)
head(mat.heatmap.m)
ggplot(data = data.frame(mat.heatmap.m), aes(x = X,  y = variable, fill= value)) + geom_tile()

ggplot(data = mat.heatmap.m, aes(X, variable, fill = value))+
  geom_tile(color = "white")+
  scale_fill_gradient2(low = "white", high = "blue", mid = "light blue", 
                       midpoint = 0.09, limit = c(0,0.18), space = "Lab", 
                       name="Differentation") +
  theme_minimal()+ 
  theme(axis.text.x = element_text(angle = 45, vjust = 1, 
                                   size = 12, hjust = 1))+
  coord_fixed()

##Box plot para r-values estimados (parentezco)
setwd ("/Users/AndreaMontero/Desktop/Mantas/Parentezco/1000IT")
Plot<- read.csv("/Users/AndreaMontero/Desktop/Mantas/Parentezco/1000IT/expectedrel.csv", header=TRUE, sep=",")
head(Plot)
boxplot(Plot$A, Plot$B, Plot$C, Plot$D, Plot$E, Plot$F, main = "Expected Relatedness",
        xlab = "Year",
        ylab = "r-value",
        col = c("violetred", "steelblue1", "salmon1", 
                "palegoldenrod", "olivedrab"),
        names = c("2013", "2014", "2015", "2016", "2017", "2018"))



